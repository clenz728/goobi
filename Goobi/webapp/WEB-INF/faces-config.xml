<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<application>

		<resource-bundle>
			<base-name>org.goobi.production.messages.MyRessourceBundle</base-name>
			<var>msgs</var>
		</resource-bundle>
		
		<message-bundle>messages.messages</message-bundle>
		
		<resource-bundle>
			<base-name>messages.messages</base-name>
			<var>msgsClassic</var>
		</resource-bundle>
		
		<locale-config>
			<default-locale>de</default-locale>
			<supported-locale>de</supported-locale>
			<supported-locale>en</supported-locale>
			<supported-locale>es</supported-locale>
		</locale-config>

	</application>

		<!-- StatisticsTimeUnitConverter for Select-Boxes -->
	<converter>
		<converter-id>StatisticsTimeUnitConverter</converter-id>
		<converter-class>org.goobi.production.converters.StatisticsTimeUnitConverter</converter-class>
	</converter>
		
	<!-- StatisticResultOutputConverter for Select-Boxes -->
	<converter>
		<converter-id>StatisticsResultOutputConverter</converter-id>
		<converter-class>org.goobi.production.converters.StatisticsResultOutputConverter</converter-class>
	</converter>
	
	<!-- StatisticCalculationUnitConverter for Select-Boxes -->
	<converter>
		<converter-id>StatisticsCalculationUnitConverter</converter-id>
		<converter-class>org.goobi.production.converters.StatisticsCalculationUnitConverter</converter-class>
	</converter>
	
	<!-- Docket Converter for Select-Boxes -->
	<converter>
		<converter-id>DocketConverter</converter-id>
		<converter-class>de.sub.goobi.converter.DocketConverter</converter-class>
	</converter>

	<!-- Process Converter for Select-Boxes -->
	<converter>
		<converter-id>ProcessConverter</converter-id>
		<converter-class>de.sub.goobi.converter.ProcessConverter</converter-class>
	</converter>

	<factory>  
        <exception-handler-factory>  
            de.sub.goobi.helper.exceptions.GoobiExceptionHandlerFactory  
        </exception-handler-factory>  
    </factory>  



</faces-config>

